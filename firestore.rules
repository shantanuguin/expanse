rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated and is owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Expenses: Users can only read/write their own expenses
    match /expenses/{expenseId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Categories: Users can read/write their own categories
    match /categories/{categoryId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Accounts: Users can read/write their own accounts
    match /accounts/{accountId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Budgets: Users can read/write their own budgets
    match /budgets/{budgetId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Recurring Expenses: Users can read/write their own recurring expenses
    match /recurring_expenses/{recurringId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Debts: Users can read/write their own debts
    match /debts/{debtId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Goals: Users can read/write their own goals
    match /goals/{goalId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
  }
}
